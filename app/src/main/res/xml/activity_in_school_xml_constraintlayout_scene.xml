<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
        <KeyFrameSet />

        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/iv_card"/>
    </Transition>


    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/iv_card"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            motion:layout_constraintStart_toEndOf="@id/iv_phone"
            motion:layout_constraintTop_toTopOf="@id/iv_phone"
            motion:layout_editor_absoluteY="120dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_card"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            motion:layout_constraintStart_toStartOf="@id/iv_phone"
            motion:layout_constraintTop_toTopOf="@id/iv_phone" />
    </ConstraintSet>
</MotionScene>