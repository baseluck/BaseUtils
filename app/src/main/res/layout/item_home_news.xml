<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_news"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="道德讲堂学习教育专题" />

    <ImageView
        android:id="@+id/iv_home_news"
        android:layout_width="110dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_content"
        app:layout_constraintTop_toTopOf="@id/tv_home_title"
        app:srcCompat="@mipmap/ic_home_new" />

    <TextView
        android:id="@+id/tv_home_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/color666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_home_news"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        tools:text="广大青年学子通过学习河东地区党组织的发展历史，能够进一步了解过去、把握现在、展望未来，做到知史爱党" />

    <TextView
        android:id="@+id/tv_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="5dp"
        android:textColor="@color/color999999"
        android:textSize="11sp"
        app:drawableStartCompat="@drawable/ic_home_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_content"
        tools:text="2021-04-21"
        tools:ignore="SmallSp" />

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="#eeeeee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_time" />
</androidx.constraintlayout.widget.ConstraintLayout>