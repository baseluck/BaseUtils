<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/shadow"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_js"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color333333"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/v_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1.周工作量达到和超过一级工作量\n2.周工作量达到和超过一级工作量" />

    <View
        android:id="@+id/v_round"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/frame_04dfff_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_js" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/khxq_num"
        app:layout_constraintBottom_toBottomOf="@id/et_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_num" />


    <TextView
        android:id="@+id/et_num"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/frame_line_999999_radius_5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/zero"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_minus"
        app:layout_constraintTop_toBottomOf="@id/tv_js" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/image"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/et_num"
        app:layout_constraintStart_toEndOf="@id/et_num"
        app:layout_constraintTop_toTopOf="@id/et_num"
        app:srcCompat="@drawable/ic_baseline_add_15" />

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:contentDescription="@string/image"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/et_num"
        app:layout_constraintStart_toEndOf="@id/textView9"
        app:layout_constraintTop_toTopOf="@id/et_num"
        app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />


</androidx.constraintlayout.widget.ConstraintLayout>