<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toEndOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <View
        android:id="@+id/v_2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toEndOf="@id/guideline8"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <View
        android:id="@+id/v_3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toEndOf="@id/guideline9"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <View
        android:id="@+id/v_4"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintStart_toEndOf="@id/guideline10"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:minHeight="45dp"
        android:text="@string/wz_name"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <TextView
        android:id="@+id/tv_gg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/wzgg"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@id/guideline8"
        app:layout_constraintStart_toEndOf="@id/guideline7"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@id/guideline9"
        app:layout_constraintStart_toEndOf="@id/guideline8"
        app:layout_constraintTop_toBottomOf="@id/v_top">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/image"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_num"
            app:layout_constraintTop_toTopOf="@id/tv_num"
            app:srcCompat="@drawable/ic_baseline_add_15" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/frame_line_999999_radius_5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/zero"
            android:textColor="@color/color333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/image"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_num"
            app:layout_constraintEnd_toStartOf="@id/tv_num"
            app:layout_constraintTop_toTopOf="@id/tv_num"
            app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_sl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/wzkc"
        android:textColor="@color/color333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom"
        app:layout_constraintEnd_toStartOf="@id/guideline10"
        app:layout_constraintStart_toEndOf="@id/guideline9"
        app:layout_constraintTop_toBottomOf="@id/v_top" />
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/colorfe757c"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline10"
        app:layout_constraintTop_toBottomOf="@id/v_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>